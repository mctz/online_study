<block wx:if="{{baseUrl}}"><web-view src="{{baseUrl+'/exclude/portal/user/findPassWord.html'}}"></web-view></block><block wx:else><view class="content"><view class="input-group"><view class="input-row border"><text class="title">账号：</text><m-input bind:input="__e" vue-id="5c862ad8-1" type="text" focus="{{true}}" clearable="{{true}}" placeholder="请输入登录账号" value="{{account}}" data-event-opts="{{[['^input',[['__set_model',['','account','$event',[]]]]]]}}" bind:__l="__l"></m-input></view></view><view class="input-group"><view class="input-row"><text class="title">{{"问题："+user.passwordQuestion}}</text></view><view class="input-row"><text class="title">答案：</text><m-input bind:input="__e" vue-id="5c862ad8-2" type="text" placeholder="请输入问题答案" value="{{passwordAnswer}}" data-event-opts="{{[['^input',[['__set_model',['','passwordAnswer','$event',[]]]]]]}}" bind:__l="__l"></m-input></view></view><view class="btn-row"><block wx:if="{{!this.user.passwordAnswer}}"><text style="color:grey;font-size:small;">您尚未设置问题答案，请联系管理员进行重置</text></block><button class="primary" style="margin-top:5px;" type="primary" disabled="{{!this.user.passwordAnswer}}" data-event-opts="{{[['tap',[['findPassword',['$event']]]]]}}" bindtap="__e">重置密码</button></view></view></block>